<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="all-tasks">
  <h1 class="text-center mt-5">TODO List App</h1>

  <div class="jumbotron text-center" style="margin-bottom:0">
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: pink;">
      <a class="navbar-brand" style="color: blue; font-size: 28px; font-weight: bold; font-style: italic;"
        href="/main">TODO List</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><a class="nav-link" style="color: blue;" href="/main">Main Todos</a></li>
          <li class="nav-item"><a class="nav-link" style="color: blue;" href="/tasks">Create Todos</a></li>
          <li class="nav-item"><a class="nav-link" style="color: blue;" href="/all-tasks">All Todos</a></li>
          <li class="nav-item"><a class="nav-link" style="color: blue;" href="/login">SignOut</a></li>
        </ul>
      </div>
    </nav>
  </div>

  <h3 class="mt-5">My Todo List Activities </h3>

  <div class="container">
    <section class="mt-4">
      <h3>Todo Task Remaining</h3>
      <ul class="list-unstyled">
        <% notCompletedTasks.forEach(task => { %>
        <li class="border-bottom pb-3">
          <strong><%= task.title %></strong>
          <p><%= task.description %></p>
          <p>Due Date: <%= task.dueDate %></p>
          <p>Priority: <%= task.priority %></p>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-primary mr-2">Edit</a>
          <!-- Add onclick event to show confirmation dialog -->
          <a href="#" class="btn btn-danger" onclick="confirmDelete('<%= task.id %>')">Delete</a>
        </li>
        <% }) %>
      </ul>
    </section>
    <br />
    <section class="mt-4">
      <h3>Todo Task Done </h3>
      <ul class="list-unstyled">
        <% completedTasks.forEach(task => { %>
        <li class="border-bottom pb-3">
          <strong><%= task.title %></strong>
          <p><%= task.description %></p>
          <p>Due Date: <%= task.dueDate %></p>
          <p>Priority: <%= task.priority %></p>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-primary mr-2">Edit </a>
          <!-- Add onclick event to show confirmation dialog -->
          <a href="#" class="btn btn-danger" onclick="confirmDelete('<%= task.id %>')">Delete </a>
        </li>
        <% }) %>
      </ul>
    </section>
  </div>

  <a href="/main" class="back-link">Back to the main page</a>

  <script>
    function confirmDelete(taskId) {
      // Show confirmation dialog
      if (confirm("Are you sure you want to delete this Item from the List?")) {
        // If user confirms, redirect to delete endpoint
        window.location.href = "/tasks/" + taskId + "/delete";
      }
    }
  </script>

</body>

</html>